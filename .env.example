# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# Database Configuration
# For SQLite (recommended for single-server deployment): sqlite:///./habit_bot.db
# For PostgreSQL: postgresql://user:password@localhost/habit_bot
DATABASE_URL=sqlite:///./habit_bot.db

# Bot Settings
COMMAND_PREFIX=!
# Set to true for development, false for production
DEBUG=false

# Obsidian Integration (optional)
# Path to your Obsidian vault where habit logs will be synced
OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault

# Discord Channel Configuration
# Channel ID where quiz questions will be sent (optional)
QUIZ_CHANNEL_ID=your_quiz_channel_id_here

# Anki Integration (optional)
# Name of the Anki deck where cards will be added
ANKI_DECK=Habits
# Anki-Connect URL (usually localhost if running locally)
ANKI_CONNECT_URL=http://localhost:8765

# Scheduling Configuration
# Timezone for cron jobs (e.g., America/New_York, Europe/London, UTC)
TIMEZONE=UTC

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/habit_bot.log